
{{#each lifts as |lift|}}
  {{log lift}}
  <section data-id="{{lift.id}}" class="col-3 peen">
    <h6>Lift:</h6>
    <h3>
      {{limit lift.exercise 15}}
    </h3>
    <p>Lift ID: {{lift.id}}</p>
    <p>Weight used: {{lift.weight}}</p>
    <p>Total reps: {{lift.reps}}</p>
    <p>
      {{#if lift.user}}
        User: {{lift.user.first_name}} {{lift.user.last_name}}
      {{else}}
        No user provided.
      {{/if}}
    </p>
    {{> remove-lift id=lift.id}}
  </section>

{{/each}}
